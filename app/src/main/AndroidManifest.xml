<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.igaltech.goaltime">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.igaltech.goaltime.RaitingBoardActivity" android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden"></activity>
        <activity android:name="com.igaltech.goaltime.GameActivity" android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="com.igaltech.goaltime.TeamsActivity" android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="com.igaltech.goaltime.ChoosePlayersActivity" android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="com.igaltech.goaltime.MenuActivity" android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"/>
        <activity
            android:name="com.igaltech.goaltime.MainActivity"
            android:label="@string/app_name"  android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>